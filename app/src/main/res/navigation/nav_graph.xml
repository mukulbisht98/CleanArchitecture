<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.xxmukulxx.notes.feature_splash.presentation.fragments.SplashFragment"
        android:label="SplashFragment"

        tools:layout="@layout/splash_layout">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:enterAnim="@anim/back_pop_exit"
            app:exitAnim="@anim/login_pop_enter"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:enterAnim="@anim/back_pop_exit"
            app:exitAnim="@anim/login_pop_enter"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.xxmukulxx.notes.feature_login_signup.presentation.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_frag">
        <argument
            android:name="email"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="pass"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/back_pop_exit"
            app:exitAnim="@anim/login_pop_enter"
            />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.xxmukulxx.notes.feature_login_signup.presentation.fragments.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/signup_frag">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.xxmukulxx.notes.feature_main.presentation.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_frag" />
</navigation>